@{
    ViewData["Title"] = "Home";
}
<script src="./js/components/bulkUrlLoader.js" defer></script>

<div id="control-panel" class="container  p-3">
    <div class="d-flex justify-content-start gap-5">
        <div id="bulk-url-action">
            <div class="title-bar fw-bold">Bulk URL Loader</div>
            <form action="" class="title-sub-container d-flex align-items-center p-2 pt-3">
                <textarea name="url-box" id="url-box" cols="50" rows="8" placeholder="page IDs, urls"></textarea>
                <button id="go-to-url">Go</button>
            </form>
        </div>
        <div id="action-panel">
            <div class="title-bar fw-bold">Action Panel</div>
            <div class="title-sub-container p-2 pt-3 d-flex flex-column justify-content-start gap-2">
                <form action="" class="mx-2" id="action-variable-input-form">
                    <input type="text" name="action-variable-input" id="action-variable-input"
                           placeholder="page ID, CSS selector, JavaScript">
                </form>
                <div class="button-group">
                    <button class="btn btn-success fw-bold mx-2">START</button>
                    <button class="btn btn-primary fw-bold mx-2">CSS</button>
                    <button class="btn btn-warning fw-bold mx-2">JavaScript</button>
                </div>
                <div class="mx-2 py-1 bg-white d-flex justify-content-between" id="action-variable-output-div">
                    <div id="action-variable-output" class="bg-secondary text-white px-2 d-flex align-items-center">
                        document.querySelectorAll('.ebm-content-page')
                    </div>
                    <button class="btn btn-success btn-sm">Copy</button>
                </div>

                <div id="option-variable" class="mx-2 py-1">
                    <form action="">
                        <input type="radio" id="complex-rule" name="CSS-rule-option" value="To Complex Rule"
                               checked>
                        <label for="CSS-rule-option">To Complex Rule</label>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

<div id="content-panel" class="container text-white">
    <div class="row">
        <div class="col-3 bg-warning">
            Column
        </div>
        <div class="col-6 bg-secondary">
            Column
        </div>
        <div class="col-3 bg-success">
            Column
        </div>
    </div>
</div>